<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import moodle.sync.javafx.custom.*?>

<!--
    In this document, the layout of the "start-page" is defined
    @author Daniel SchrÃ¶ter
-->

<fx:root minWidth="580.0" type="VBox" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane minWidth="580.0" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
         <top>
               <HBox alignment="TOP_RIGHT" spacing="5.0" BorderPane.alignment="CENTER">
                      <Button fx:id="updateButton" mnemonicParsing="false" text="%start.update" />
                      <Button fx:id="settingsButton" mnemonicParsing="false" text="%start.settings" />
                   <padding>
                       <Insets bottom="5.0" left="5.0" right="10.0" top="5.0" />
                   </padding>
               </HBox>
         </top>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets top="30.0" />
         </padding>
         <center>
            <HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                      <VBox>
                          <Label text="%start.selectcourse">
                          <padding>
                              <Insets bottom="5.0" />
                          </padding>
                          </Label>
                          <ComboBox fx:id="courseCombo">
                              <buttonCell>
                                  <CourseListCell />
                              </buttonCell>
                              <cellFactory>
                                  <CourseCellFactory />
                              </cellFactory>
                          </ComboBox>
                      </VBox>
               </children>
            </HBox>
         </center>
      </BorderPane>
   </children>
</fx:root>
