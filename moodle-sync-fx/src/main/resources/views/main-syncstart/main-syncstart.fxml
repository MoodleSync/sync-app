<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import moodle.sync.javafx.core.control.*?>
<?import moodle.sync.javafx.custom.*?>

<!--
    In this document, the layout of the "start-page" is defined
    @author Daniel SchrÃ¶ter
-->

<fx:root alignment="CENTER" minWidth="580.0" type="VBox" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <BorderPane fx:id="borderPane" minWidth="580.0" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
        <top>

            <ToolBar>
                <VBox alignment="BOTTOM_CENTER">
                    <Button fx:id="folderButton" mnemonicParsing="false">
                        <tooltip><Tooltip text="%start.folderButton" /></tooltip>
                        <graphic>
                            <SvgIcon styleClass="icon, folderButton" />
                        </graphic>
                    </Button>
                </VBox>
                <VBox>
                    <Label text="%start.selectcourse" />
                    <ComboBox fx:id="courseCombo" minWidth="100">
                        <buttonCell>
                            <CourseListCell />
                        </buttonCell>
                        <cellFactory>
                            <CourseCellFactory />
                        </cellFactory>
                    </ComboBox>
                </VBox>
                <VBox>
                    <Label text="%start.selectsection" />
                    <ComboBox fx:id="sectionCombo" minWidth="100">
                        <buttonCell>
                            <SectionListCell />
                        </buttonCell>
                        <cellFactory>
                            <SectionCellFactory />
                        </cellFactory>
                    </ComboBox>
                </VBox>
                <VBox>
                    <Label fx:id="fileserverCourseLabel" text="%start.selectFileServerCourse" />
                    <ComboBox fx:id="fileserverCombo" minWidth="100">
                        <buttonCell>
                            <FileserverCourseListCell />
                        </buttonCell>
                        <cellFactory>
                            <FileserverCourseCellFactory />
                        </cellFactory>
                    </ComboBox>
                </VBox>
               <Pane HBox.hgrow="ALWAYS" />
                <HBox alignment="BOTTOM_CENTER">
                    <Button fx:id="downloadButton" alignment="BOTTOM_CENTER" mnemonicParsing="false" text="%start.download">
                        <tooltip><Tooltip text="%start.download.course" /></tooltip>
                        <graphic>
                            <SvgIcon styleClass="icon, download-icon" />
                        </graphic>
                    </Button>
                </HBox>
                <HBox alignment="BOTTOM_CENTER">
                    <Button fx:id="updateButton" alignment="BOTTOM_CENTER" minWidth="90" mnemonicParsing="false" text="%start.update" />
                </HBox>
                <HBox alignment="BOTTOM_CENTER">
                    <Button fx:id="syncButton" minWidth="110" mnemonicParsing="false" text="%start.sync" />
                </HBox>
                <HBox alignment="BOTTOM_CENTER">
                    <Button fx:id="settingsButton" minWidth="95" mnemonicParsing="false" text="%start.settings" />
                </HBox>
                <HBox alignment="BOTTOM_CENTER">
                    <Button fx:id="helpButton" mnemonicParsing="false" text="%start.help">
                        <tooltip><Tooltip text="%start.help.tooltip" /></tooltip>
                        <graphic>
                            <SvgIcon styleClass="icon, help-icon" />
                        </graphic>
                    </Button>
                </HBox>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
            </ToolBar>
        </top>
        <center>
            <StackPane fx:id="tableContainer" VBox.vgrow="ALWAYS" >
                <BorderPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </BorderPane.margin>
            </StackPane>
        </center>
      <bottom>
          <HBox minWidth="580.0" spacing="5.0">
              <HBox alignment="CENTER_LEFT">
                  <HBox spacing="5.0">
                      <Label text="%start.labelcourse" />
                      <Label fx:id="courseidlabel" />
                      <Label text="%start.labelsection" />
                      <Label fx:id="sectionidlabel" />
                  </HBox>
              </HBox>
              <Pane HBox.hgrow="ALWAYS" />
              <HBox alignment="CENTER_RIGHT">
                  <HBox>
                      <ProgressBar fx:id="progressbar" />
                  </HBox>
              </HBox>
              <BorderPane.margin>
                  <Insets bottom="5.0" left="5.0" right="25.0" />
              </BorderPane.margin>
          </HBox>
      </bottom>
    </BorderPane>
</fx:root>
